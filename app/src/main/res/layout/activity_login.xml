<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    tools:context="ali.myemail.Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:gravity="top"
        android:text="EXCHANGE BUSINESS ASSISTANT" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:src="@drawable/logo"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Exchange Address"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:inputType="textWebEditText"
        android:id="@+id/etExchange"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:inputType="textEmailAddress"
        android:id="@+id/etEmail"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:inputType="textPassword"
        android:id="@+id/etPassword"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button5"
            android:textColor="#CCCCCC"
            android:text="@string/Login"
            android:layout_marginRight="2dp"
            android:id="@+id/btnLogin"></Button>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button1"
            android:textColor="#CCCCCC"
            android:text="Microsoft"
            android:layout_marginLeft="2dp"
            android:id="@+id/btnChangeCre"></Button>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:textColor="#FF0000"
        android:id="@+id/tvError"/>

</LinearLayout>
