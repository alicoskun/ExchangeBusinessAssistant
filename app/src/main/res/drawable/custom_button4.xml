<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" >
        <shape>
            <gradient
                android:startColor="#C23B22"
                android:endColor="#C23B22"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#CFCFC4" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>